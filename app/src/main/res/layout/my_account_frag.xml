<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
    <FrameLayout
    android:id="@+id/fragment8_2"
    android:name="edu.aucegypt.learningcentershub.main_frag"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/fragment8_1" >


<RelativeLayout
    android:id="@+id/picLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient">

    <RelativeLayout
        android:id="@+id/imgUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/account"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:padding="3dp"

            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgUser"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:text="Hassan Kandil"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:textSize="45sp" />




</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/picLayout"
    android:layout_margin="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:text="Email"
                android:textColor="@color/applicationColor"
                android:textSize="15sp"
                />

            <EditText
                android:id="@+id/emailedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/grey_light"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="15dp"
                android:text="hassanosama@aucegypt.edu"
                android:textColor="#000000" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:text="Phone Number"
                android:textColor="@color/applicationColor"
                android:textSize="15sp"
                />

            <EditText
                android:id="@+id/phonenumberedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/grey_light"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="15dp"
                android:text="+201150766667"
                android:textColor="#000000" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:text="Preferences"
                android:textColor="@color/applicationColor"
                android:textSize="15sp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_id_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>



        <Button
            android:id="@+id/signout_myaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sign Out"
            android:textColor="@color/applicationColor"
            app:layout_constraintTop_toBottomOf="@id/linearLayout2" />
    </LinearLayout>

</RelativeLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fragment8"
        android:name="edu.aucegypt.learningcentershub.NavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/fragment8_1"
        android:name="edu.aucegypt.learningcentershub.TopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/fragment8_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</RelativeLayout>
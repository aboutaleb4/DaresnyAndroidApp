<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id = "@+id/Frame1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id ="@+id/topbar4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/applicationColor"
            />

        <ImageButton
            android:id="@+id/buttonback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/applicationColor"
            android:src="@drawable/back"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="top"
            android:src="@drawable/logo4" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Frame1"
        >
        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/infoLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/textName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Course Name"
                                android:textColor="@color/applicationColor"
                                android:textSize="30sp" />

                            <TextView
                                android:id="@+id/textCategory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Course Category"
                                android:textColor="@color/applicationColor"
                                android:textSize="20sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/image1"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@mipmap/ic_launcher" />


                        </LinearLayout>


                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewDescription"
                        style="@style/CardView.Light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="@android:color/white"
                        app:cardCornerRadius="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="16dp"
                                    android:text="Course Information"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />

                                <Button
                                    android:id="@+id/arrowBtnCourseInfo"
                                    style="@style/Widget.AppCompat.Button.Borderless"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginEnd="12dp"
                                    android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                                    android:fadingEdge="none" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/expandableLearningCenter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <EditText
                                    android:id="@+id/tv_learningCenterName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="16dp"
                                    android:text="Name"
                                    android:textSize="18sp" />

                                <EditText
                                    android:id="@+id/tv_learningCenterPhone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="10dp"
                                    android:text="Phone Number"
                                    android:textSize="18sp" />

                                <EditText
                                    android:id="@+id/tv_learningCenterAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:text="Address"
                                    android:textSize="18sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewSchedule"
                        style="@style/CardView.Light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="@android:color/white"
                        app:cardCornerRadius="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_courseschedule"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="16dp"
                                    android:text="Course Schedule"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />

                                <Button
                                    android:id="@+id/arrowBtnSchedule"
                                    style="@style/Widget.AppCompat.Button.Borderless"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginEnd="12dp"
                                    android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                                    android:fadingEdge="none" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/expandableCourseSchedule"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <EditText
                                    android:id="@+id/tv_learningCenterName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="16dp"
                                    android:text="Name"
                                    android:textSize="18sp" />

                                <EditText
                                    android:id="@+id/tv_learningCenterPhone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="10dp"
                                    android:text="Phone Number"
                                    android:textSize="18sp" />

                                <EditText
                                    android:id="@+id/tv_learningCenterAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:text="Address"
                                    android:textSize="18sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewInstructor"
                        style="@style/CardView.Light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="@android:color/white"
                        app:cardCornerRadius="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_courseinstructor"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="16dp"
                                    android:text="Instructor"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />

                                <Button
                                    android:id="@+id/arrowBtnSchedule"
                                    style="@style/Widget.AppCompat.Button.Borderless"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginEnd="12dp"
                                    android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                                    android:fadingEdge="none" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/expandableCourseSchedule"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <EditText
                                    android:id="@+id/tv_learningCenterName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="16dp"
                                    android:text="Name"
                                    android:textSize="18sp" />

                                <EditText
                                    android:id="@+id/tv_learningCenterPhone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="10dp"
                                    android:text="Phone Number"
                                    android:textSize="18sp" />

                                <EditText
                                    android:id="@+id/tv_learningCenterAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:text="Address"
                                    android:textSize="18sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewPreview"
                        style="@style/CardView.Light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="@android:color/white"
                        app:cardCornerRadius="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_coursepreview"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="16dp"
                                    android:text="Preview"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />

                                <Button
                                    android:id="@+id/arrowBtnSchedule"
                                    style="@style/Widget.AppCompat.Button.Borderless"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginEnd="12dp"
                                    android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                                    android:fadingEdge="none" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/expandableCourseSchedule"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <EditText
                                    android:id="@+id/tv_learningCenterName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="16dp"
                                    android:text="Name"
                                    android:textSize="18sp" />

                                <EditText
                                    android:id="@+id/tv_learningCenterPhone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="10dp"
                                    android:text="Phone Number"
                                    android:textSize="18sp" />

                                <EditText
                                    android:id="@+id/tv_learningCenterAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:text="Address"
                                    android:textSize="18sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </RelativeLayout>


        </ScrollView>

</FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>